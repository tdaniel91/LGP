<h1>Listing empresas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Historia</th>
      <th>Data criacao</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Morada</th>
      <th>Areas</th>
      <th>Projectos</th>
      <th>Admin</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.nome %></td>
        <td><%= empresa.historia %></td>
        <td><%= empresa.data_criacao %></td>
        <td><%= empresa.email %></td>
        <td><%= empresa.telefone %></td>
        <td><%= empresa.morada %></td>
        <td><%= empresa.areas %></td>
        <td><%= empresa.projectos %></td>
        <td><%= empresa.admin_id %></td>
        <td><%= link_to 'Show', empresa %></td>
        <td><%= link_to 'Edit', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Destroy', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

